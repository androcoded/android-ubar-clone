<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverRequestListActivity"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="5dp">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Driver Request"
        android:id="@+id/tlbDriverRequest"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Driver Request"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update List"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:id="@+id/btnUpdateList"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listViewDriverRequest"
        />

</LinearLayout>